/*
 * Another minimal EE demo that demostrates how to create two TASKs with different
 * priorities.
 * This demo can be used to test the preemption mechanism.
 * In this case Task2 can't preempt Task1.
 * Author: 2011  Gianluca Franchino
 *               Giuseppe Serano
 *         2014  Christoph Kreuzberger
 * Based on examples/s12xs/porting_examples/monostack/EEtest4
 */

CPU mySystem {

	OS myOs {

		EE_OPT = "DEBUG";
		EE_OPT = "__ASSERT__";

		CPU_DATA = CORTEX_RX {
			MODEL = R4;
			APP_SRC = "code.c";
			COMPILER_TYPE = CCS; 
			MULTI_STACK = FALSE;
		};

    MCU_DATA = TI {
      MODEL = TMS570;
    };

		EE_OPT = "__USE_LEDS__";
		EE_OPT = "__USE_SYSTICK__";
    
    EE_OPT = "__ALLOW_NESTED_IRQ__";
    
    
		STATUS = EXTENDED;
		STARTUPHOOK = FALSE;
		ERRORHOOK = FALSE;
		SHUTDOWNHOOK = FALSE;
		PRETASKHOOK = FALSE;
		POSTTASKHOOK = FALSE;
		USEGETSERVICEID = FALSE;
		USEPARAMETERACCESS = FALSE;
		USERESSCHEDULER = FALSE;

    KERNEL_TYPE = FP{
       NESTED_IRQ = TRUE;
     }; 

	};

	TASK Task1 {
		PRIORITY = 0x02;   /* High priority */
		AUTOSTART = FALSE;
		STACK = SHARED;
		ACTIVATION = 1;    /* only one pending activation */
		SCHEDULE = FULL;
	};

	TASK Task2 {
		PRIORITY = 0x01;   /* Low priority */
		AUTOSTART = FALSE;
		STACK = SHARED;
		ACTIVATION = 1;    /* only one pending activation */
		SCHEDULE = FULL;
	};


};
