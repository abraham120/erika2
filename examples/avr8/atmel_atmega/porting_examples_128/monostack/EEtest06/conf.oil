/*
 * A minimal EE demo that demostrates how the Erika BCC1 mode works.
 * This demo can be used to test Erika BCC1 files compilation, kernel start
 * procedure (StartOS(...)) and task termination (EE_s12xs_terminate_task(:::)).
 * Author: 2014  Giuseppe Serano
 * Based on examples/s12xs/porting_examples/monostack/EEtest6
 */

CPU mySystem {

	OS myOs {

		EE_OPT = "DEBUG";
		EE_OPT = "__ASSERT__";

		CPU_DATA = AVR {
			MODEL = AVR8
			APP_SRC = "code.c";
			MULTI_STACK = FALSE;
		};

		MCU_DATA = MEGA {
			MODEL = 128;
		};

		KERNEL_TYPE = BCC1;
		EE_OPT = "__OO_STARTOS_OLD__";

		STATUS = EXTENDED;
		STARTUPHOOK = FALSE;
		ERRORHOOK = FALSE;
		SHUTDOWNHOOK = FALSE;
		PRETASKHOOK = FALSE;
		POSTTASKHOOK = FALSE;
		USEGETSERVICEID = FALSE;
		USEPARAMETERACCESS = FALSE;
		USERESSCHEDULER = FALSE;

	};

	TASK Task1 {
		PRIORITY = 0x01;   /* Low priority */
		AUTOSTART = FALSE;
		STACK = SHARED;
		SCHEDULE = FULL;
	};

	TASK Task2 {
		PRIORITY = 0x01;   /* Low priority */
		AUTOSTART = TRUE;
		STACK = SHARED;
		SCHEDULE = FULL;
	};

	ISR timer_handler {
		CATEGORY = 2;
		ENTRY = "TIMER0_COMP";	/* TODO: Set correct ENTRY name. */
		/* PRIORITY = LOW; */	/* FIXED HARDWARE PRIORITY */
	};

};
