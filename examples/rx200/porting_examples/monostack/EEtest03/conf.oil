/*
 * A minimal EE demo that demostrates how to create two TASKs with different
 * priorities.
 * This demo can be used to test the preemption mechanism.
 * In this case Task2 preempts Task1.
 * Author: 2012  Gianluca Franchino
 * Based on:
 * examples/cortex_mx/lm4f232xxxx/porting_examples_keil/monostack/EEtest03
 */

CPU mySystem {

	OS myOs {

		EE_OPT = "DEBUG";
		EE_OPT = "__ASSERT__";

		CPU_DATA = RX200 {
			APP_SRC = "code.c";
			COMPILER_TYPE = CCRX; 
			MULTI_STACK = FALSE;
		};

		MCU_DATA = RENESAS {
			MODEL = R5F5210x;
		};

		EE_OPT = "__RSKRX210__";
		EE_OPT = "__USE_SYSTICK__";
		EE_OPT = "__USE_RSKRX120_USER_LED__";
		EE_OPT = "__USE_RSKRX210_OP_FREQ_SETUP__";

		KERNEL_TYPE = FP;

	};

	TASK Task1 {
		PRIORITY = 0x01;   /* Low priority */
		STACK = SHARED;
		SCHEDULE = FULL;
	};

	TASK Task2 {
		PRIORITY = 0x02;   /* High priority */
		STACK = SHARED;
		SCHEDULE = FULL;
	};

	ISR cmia0_handler {
		CATEGORY = 2;
		ENTRY = "CMIA0";
	};

};
