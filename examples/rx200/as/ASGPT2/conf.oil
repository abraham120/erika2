/*
 * Simple project to test all timers in polling mode.
 *
 * Author: 2013  Gianluca Franchino
 */

CPU mySystem {

	OS myOs {

		EE_OPT = "DEBUG";
		EE_OPT = "__ASSERT__";

		CPU_DATA = RX200 {
			APP_SRC = "main.c";
			APP_SRC = "Mcu_Cfg.c";
			APP_SRC = "Port_Cfg.c";
			APP_SRC = "Dio_Cfg.c";
			APP_SRC = "Gpt_Cfg.c";
			COMPILER_TYPE = CCRX; 
			MULTI_STACK = FALSE;
		};

		MCU_DATA = RENESAS {
			MODEL = R5F5210x;
		};

		EE_OPT = "__AUTOSAR_R4_0__";
		EE_OPT = "__AS_MCU_DRIVER__";
		EE_OPT = "__AS_PORT_DRIVER__";
		EE_OPT = "__AS_DIO_DRIVER__";
		EE_OPT = "__AS_GPT_DRIVER__";

		/* Used to build separate libas.a without configuration */
		EE_OPT = "__ADD_LIBS__";
		LIB = ENABLE {
			NAME = "AUTOSAR";
		};
		
		STATUS = EXTENDED;
		STARTUPHOOK = FALSE;
		ERRORHOOK = FALSE;
		SHUTDOWNHOOK = FALSE;
		PRETASKHOOK = FALSE;
		POSTTASKHOOK = FALSE;
		USEGETSERVICEID = FALSE;
		USEPARAMETERACCESS = FALSE;
		USERESSCHEDULER = FALSE;

		KERNEL_TYPE = FP;

	};

	TASK TaskTMR0 {
		PRIORITY = 0x01;   /* Low priority */
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		ACTIVATION = 1;    /* only one pending activation */
		STACK = SHARED;
	};
	
	ISR EE_RX200_CMIA0_ISR {
		CATEGORY = 2;
		ENTRY = "CMIA0";
	};
	
	TASK TaskCMT0 {
		PRIORITY = 0x01;   /* Low priority */
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		ACTIVATION = 1;    /* only one pending activation */
		STACK = SHARED;
	};
	
	ISR EE_RX200_CMI0_ISR {
		CATEGORY = 2;
		ENTRY = "CMI0";
	};
	
	TASK TaskMTU0 {
		PRIORITY = 0x01;   /* Low priority */
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		ACTIVATION = 1;    /* only one pending activation */
		STACK = SHARED;
	};
	
	ISR EE_RX200_TGIA0_ISR {
		CATEGORY = 2;
		ENTRY = "TGIA0";
	};
	
	TASK TaskTMR1 {
		PRIORITY = 0x01;   /* Low priority */
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		ACTIVATION = 1;    /* only one pending activation */
		STACK = SHARED;
	};
	
	ISR EE_RX200_CMIB1_ISR {
		CATEGORY = 2;
		ENTRY = "CMIB1";
	};
	
	TASK TaskCMT1 {
		PRIORITY = 0x01;   /* Low priority */
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		ACTIVATION = 1;    /* only one pending activation */
		STACK = SHARED;
	};
	
	ISR EE_RX200_CMI1_ISR {
		CATEGORY = 2;
		ENTRY = "CMI1";
	};
	
	TASK TaskMTU1 {
		PRIORITY = 0x01;   /* Low priority */
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		ACTIVATION = 1;    /* only one pending activation */
		STACK = SHARED;
	};
	
	ISR EE_RX200_TGIB1_ISR {
		CATEGORY = 2;
		ENTRY = "TGIB1";
	};
	

};
