/*
 * Simple project to test the AUTOSAR SPI Handler/Driver:
 * - 1 Sequence
 *   - 1 Job
 *     - 1 Channel
 *       - One Byte Only.
 * - 2 SSI Hardware Modules
 *   - Loop-back Mode
 *   - 1 Unit Asynchronous
 *   - 1 Unit Synchronous
 * - Write/AsyncTransmit/Read (IB)
 *   - Interrupt Mode
 *   - Polling Mode
 * - Setup/AsyncTransmit (EB)
 *   - Interrupt Mode
 *   - Polling Mode
 * - SyncTransmit/Read (IB)
 * - Setup/SyncTransmit (EB)
 *   - No Source Buffer.
 *
 * Author: 2013  Gianluca Franchino
 */
 
CPU test_application {

	OS EE {

		EE_OPT = "DEBUG";
		EE_OPT = "__ASSERT__";

		CPU_DATA = RX200 {
			APP_SRC = "main.c";
			APP_SRC = "Mcu_Cfg.c";
			APP_SRC = "Port_Cfg.c";
			APP_SRC = "Dio_Cfg.c";
			APP_SRC = "Spi_Cfg.c";
			COMPILER_TYPE = CCRX; 
			MULTI_STACK = FALSE;
			
		};

		MCU_DATA = RENESAS {
			MODEL = R5F5210x;
		};

		EE_OPT = "__AUTOSAR_R4_0__";
		EE_OPT = "__AS_MCU_DRIVER__";
		EE_OPT = "__AS_PORT_DRIVER__";
		EE_OPT = "__AS_DIO_DRIVER__";
		
		EE_OPT = "__AS_SPI_DRIVER__";
		EE_OPT = "__AS_CFG_SPI_VERSION_INFO_API__";
		EE_OPT = "__AS_CFG_SPI_TEST_JOB_0_END_NOTIFICATION__";
		EE_OPT = "__AS_CFG_SPI_TEST_SEQ_0_END_NOTIFICATION__";
		
		/* Used to build separate libas.a without configuration */
		EE_OPT = "__ADD_LIBS__";
		LIB = ENABLE {
			NAME = "AUTOSAR";
		};
		
		STATUS = EXTENDED;
		STARTUPHOOK = FALSE;
		ERRORHOOK = FALSE;
		SHUTDOWNHOOK = FALSE;
		PRETASKHOOK = FALSE;
		POSTTASKHOOK = FALSE;
		USEGETSERVICEID = FALSE;
		USEPARAMETERACCESS = FALSE;
		USERESSCHEDULER = FALSE;

		KERNEL_TYPE = FP;

	};

	/* this is the OIL part for the task job error */
	TASK TaskJobError {
		PRIORITY = 0x02;   /* High priority */
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		ACTIVATION = 1;    /* only one pending activation */
		STACK = SHARED;
	};

	/* this is the OIL part for the task job ok */
	TASK TaskJobOk {
		PRIORITY = 0x01;   /* Low priority */
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		ACTIVATION = 1;    /* only one pending activation */
		STACK = SHARED;
	};

	/* this is the OIL part for the task sequence error */
	TASK TaskSeqError {
		PRIORITY = 0x02;   /* High priority */
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		ACTIVATION = 1;    /* only one pending activation */
		STACK = SHARED;
	};

	/* this is the OIL part for the task sequence ok */
	TASK TaskSeqOk {
		PRIORITY = 0x01;   /* Low priority */
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		ACTIVATION = 1;    /* only one pending activation */
		STACK = SHARED;
	};
	
/* this is the OIL part for the ISRs */
	ISR EE_RX200_SCI0_TXI0_ISR {
		CATEGORY = 2;
		ENTRY = "SCI0_TXI0";
		PRIORITY = 2;
	};
	
	ISR EE_RX200_SCI0_ERI0_ISR {
		CATEGORY = 2;
		ENTRY = "SCI0_ERI0";
	};
	
	ISR EE_RX200_SCI0_RXI0_ISR {
		CATEGORY = 2;
		ENTRY = "SCI0_RXI0";
	};
	
	ISR EE_RX200_SCI1_TXI1_ISR {
		CATEGORY = 2;
		ENTRY = "SCI1_TXI1";
		PRIORITY = 2;

	};
	
	ISR EE_RX200_SCI1_ERI1_ISR {
		CATEGORY = 2;
		ENTRY = "SCI1_ERI1";
	};
	
	ISR EE_RX200_SCI1_RXI1_ISR {
		CATEGORY = 2;
		ENTRY = "SCI1_RXI1";
		PRIORITY = 3;
	};
};
