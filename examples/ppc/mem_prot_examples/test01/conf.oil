CPU PerfTestApp {
	OS EE {
		CFLAGS = "-Xsmall-data=0";
		MEMORY_PROTECTION = TRUE;
		EE_OPT = "EE_ISR_DYNAMIC_TABLE";

		CPU_DATA = PPCE200ZX {
			MODEL = E200Z7;
			APP_SRC = "code.c";
			APP_SRC = "app1.c";
			APP_SRC = "app2.c";
			APP_SRC = "trusted.c";
			MULTI_STACK = TRUE;
			VLE = TRUE;
		};

		MCU_DATA = PPCE200ZX {
			MODEL = MPC5674F;
		};

		STATUS = EXTENDED;
		STARTUPHOOK = FALSE;
		ERRORHOOK = FALSE;
		SHUTDOWNHOOK = FALSE;
		PRETASKHOOK = FALSE;
		POSTTASKHOOK = FALSE;
		USEGETSERVICEID = FALSE;
		USEPARAMETERACCESS = FALSE;
		USERESSCHEDULER = FALSE;

		KERNEL_TYPE = SC4;

		EE_OPT = "DEBUG";
//		ORTI_SECTIONS = ALL;
	};

	TASK MainTask {
		PRIORITY = 10;
		ACTIVATION = 1;
		SCHEDULE = FULL;
		AUTOSTART = TRUE;
		STACK = SHARED;
	};

	TASK TrustedTask1 {
		PRIORITY = 1;
		ACTIVATION = 1;
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		STACK = SHARED;
	};

	TASK App1Task {
		PRIORITY = 4;
		ACTIVATION = 1;
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		STACK = SHARED;
	};

	TASK App2Task {
		PRIORITY = 4;
		ACTIVATION = 1;
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		STACK = SHARED;
	};

	ISR TrustedIsr {
		CATEGORY = 2;
		ENTRY = "FIXED_INTV";
	};

	ISR App1Isr {
		CATEGORY = 2;
		ENTRY = "DECREMENTER";
	};

	ISR App2Isr {
		CATEGORY = 2;
		ENTRY = "0";
	};

	APPLICATION TrustedApp {
		TRUSTED = TRUE;
		ISR = "TrustedIsr";
		TASK = MainTask;
		TASK = TrustedTask1;
		MEMORY_BASE = 0x40010000;
		MEMORY_SIZE = 0x10000;
		SHARED_STACK_SIZE = 512;
		IRQ_STACK_SIZE = 512;
	};

	APPLICATION App1 {
		TRUSTED = FALSE;
		ISR = "App1Isr";
		TASK = App1Task;
		MEMORY_BASE = 0x40020000;
		MEMORY_SIZE = 0x10000;
		SHARED_STACK_SIZE = 512;
		IRQ_STACK_SIZE = 512;
	};

	APPLICATION App2 {
		TRUSTED = FALSE;
		ISR = "App2Isr";
		TASK = App2Task;
		MEMORY_BASE = 0x40030000;
		MEMORY_SIZE = 0x4000;
		SHARED_STACK_SIZE = 512;
		IRQ_STACK_SIZE = 512;
	};
};
