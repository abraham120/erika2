CPU test_application {

	OS EE {
		EE_OPT = "DEBUG";
		EE_OPT = "__OO_SEM__";
		EE_OPT = "NODEPS";
		EE_OPT = "__ASSERT__";
		EE_OPT = "__USE_LEDS__";
		EE_OPT = "__USE_BUTTONS__";
		EE_OPT = "EE_ISR_DYNAMIC_TABLE";

		EE_OPT = "USE_PRAGMAS";

		CPU_DATA = PPCE200ZX {
			MODEL = E200Z7;
			APP_SRC = "main.c";
			MULTI_STACK = FALSE;
		};

		MCU_DATA = PPCE200ZX {
			MODEL = MPC5674F;
		};

		STATUS = EXTENDED;
		STARTUPHOOK = FALSE;
		ERRORHOOK = FALSE;
		SHUTDOWNHOOK = FALSE;
		PRETASKHOOK = FALSE;
		POSTTASKHOOK = FALSE;
		USEGETSERVICEID = FALSE;
		USEPARAMETERACCESS = FALSE;
		USERESSCHEDULER = FALSE;

//		ORTI_SECTIONS = ALL;
	};

	TASK Task1 {
		PRIORITY = 0x01;
		AUTOSTART = FALSE;
		STACK = SHARED;
		ACTIVATION = 1;
		RESOURCE = MyResource;
	};

	TASK Task2 {
		PRIORITY = 0x02;
		SCHEDULE = FULL;
		AUTOSTART = TRUE;
		STACK = SHARED;
		RESOURCE = MyResource;
		EVENT = MyEvent;
	};


	RESOURCE MyResource { RESOURCEPROPERTY = STANDARD; };

	COUNTER MainTimer {
		MINCYCLE = 2;
		MAXALLOWEDVALUE = 100;
		TICKSPERBASE = 1;
	};

	ALARM MyAlarm {
		COUNTER = MainTimer;
		ACTION = ACTIVATETASK {
			TASK = Task1;
		};
		AUTOSTART = FALSE;
	};

	OS EE { KERNEL_TYPE = BCC1; EE_OPT = "__OO_STARTOS_OLD__";};
	TASK Task1 { SCHEDULE = NON; };
	TASK Task2 { ACTIVATION = 1; };
};
