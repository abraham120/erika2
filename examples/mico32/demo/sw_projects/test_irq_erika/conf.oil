CPU test_application {

	OS EE {		
		CFLAGS = "-g2";
		ASFLAGS = "";

		CPU_DATA = LM32 {
			APP_SRC = "main.c";
			MULTI_STACK = FALSE;
			USESTANDALONEPRINTF = FALSE;
			USESMALLC = FALSE;
		};
		
		MCU_DATA = LATTICE_PLATFORM {
			MODEL = LIBRARY {
				PLATFORM_LIB_PATH = "../../platforms/fpg_eye_diamond/library/";
				PLATFORM_NAME = "fpg_eye_mico32";
				PLATFORM_BLD_CFG = "Release";
			};
			
			DEVICE = TIMER {
				NAME = "timer";
				OPTIONS = TIMER_IRQ_SUPPORT;
			};

			DEVICE = TIMER {
				NAME = "timer_uwl";
				OPTIONS = TIMER_IRQ_SUPPORT;
			};

			DEVICE = TIMER {
				NAME = "freetimer";
			};
		};

		BOARD_DATA = FPG_EYE {
			OPTIONS = RS232;
			OPTIONS = LEDS;
		};
		
		KERNEL_TYPE = FP;
		
		/* ********************************************************** */
		/*                Contrib Library Inclusion                   */
		/* ********************************************************** */
		EE_OPT = "__ADD_LIBS__";
		EE_OPT = "__USE_GPIO_IRQ__";
		EE_OPT = "__USE_DIAMOND__";
		
	};
	
 	ISR Gpio {
  		CATEGORY = 2;
  		LEVEL = "MISC_GPIO_IRQ";
  		HANDLER = "EE_gpio_common_handler";
 	};
	
	
	/* ****************************************************************** */
	/*                          Application                               */
	/* ****************************************************************** */
};
