/* BCC1 multiprocessor configuration for MISRA check under Lin */

CPU test_application {

	OS EE {
		EE_OPT = "EE_DEBUG";
		EE_OPT = "NODEPS";
		EE_OPT = "__ASSERT__";
        EE_OPT = "EE_SAVE_TEMP_FILES";
		EE_OPT="EE_MM_OPT";
        EE_OPT = "EE_FIND_COMPILER_IN_PATH";    /* Used by Lin */

		/* The following have to be generated by RT-Druid */
    	EE_OPT = "EE_AS_IOC__";

		CFLAGS = "-I../../library";

		REMOTENOTIFICATION = USE_RPC;	/* Required by Inter-core communication mechanism */

		MASTER_CPU = "master";

		CPU_DATA = TRICORE {
			ID = "master";
			CPU_CLOCK = 200.0;
            COMPILER_TYPE = GNU;
            APP_SRC = "main.c";
			APP_SRC = "library/ioc_common.c";
			MULTI_STACK = FALSE;
		};

		CPU_DATA = TRICORE {
			ID = "slave";
			CPU_CLOCK = 200.0;
            COMPILER_TYPE = GNU;
      		APP_SRC = "main.c";
      		APP_SRC = "library/ioc_slave.c";
			MULTI_STACK = FALSE;
		};

		MCU_DATA = TRICORE {
			MODEL = TC27x;
		};

		STATUS = EXTENDED;
		STARTUPHOOK = FALSE;
		ERRORHOOK = FALSE;
		SHUTDOWNHOOK = FALSE;
		PRETASKHOOK = FALSE;
		POSTTASKHOOK = FALSE;
		USEGETSERVICEID = FALSE;
		USEPARAMETERACCESS = FALSE;
		USERESSCHEDULER = FALSE;

		ORTI_SECTIONS = ALL;
		KERNEL_TYPE = BCC1;
	};

	COUNTER SystemTimerMaster {
	MINCYCLE = 1;
        MAXALLOWEDVALUE = 2147483647;
        TICKSPERBASE = 1;
        TYPE = HARDWARE {
		DEVICE = "STM_SR0";
		SYSTEM_TIMER = TRUE;
		PRIORITY = 2;
        };
        SECONDSPERTICK = 0.001;
        CPU_ID = "master";
	};

	COUNTER SystemTimerSlave {
	MINCYCLE = 1;
        MAXALLOWEDVALUE = 2147483647;
        TICKSPERBASE = 1;
        TYPE = HARDWARE {
		DEVICE = "STM_SR0";
		SYSTEM_TIMER = TRUE;
		PRIORITY = 2;
        };
        SECONDSPERTICK = 0.001;
        CPU_ID = "slave";
	};

	TASK Task1 {
		CPU_ID = "master";
		PRIORITY = 0x01;
		SCHEDULE = NON;
		AUTOSTART = FALSE;
		STACK = SHARED;
		ACTIVATION = 1;
		RESOURCE = MyResource;
	};

	TASK Task2 {
		CPU_ID = "master";
		PRIORITY = 0x02;
		SCHEDULE = FULL;
		AUTOSTART = TRUE;
		STACK = SHARED;
		ACTIVATION = 1;
		RESOURCE = MyResource;
	};

	TASK Task3 {
		CPU_ID = "slave";
		PRIORITY = 0x02;
		SCHEDULE = FULL;
		AUTOSTART = TRUE;
		STACK = SHARED;
		ACTIVATION = 1;
		RESOURCE = MyOtherResource;
	};

	RESOURCE MyResource { RESOURCEPROPERTY = STANDARD; };

	RESOURCE MyOtherResource { RESOURCEPROPERTY = STANDARD; };

	COUNTER MainTimer {
		MINCYCLE = 2;
		MAXALLOWEDVALUE = 100;
		TICKSPERBASE = 1;
		CPU_ID = "master";
	};

	ALARM MyAlarm {
		COUNTER = MainTimer;
		ACTION = ACTIVATETASK {
			TASK = Task1;
		};
		AUTOSTART = FALSE;
	};

	COUNTER OtherTimer {
		MINCYCLE = 2;
		MAXALLOWEDVALUE = 100;
		TICKSPERBASE = 1;
		CPU_ID = "slave";
	};

	ALARM OtherAlarm {
		COUNTER = OtherTimer;
		ACTION = ACTIVATETASK {
			TASK = Task1;
		};
		AUTOSTART = FALSE;
	};

	SPINLOCK spinlock_1 { };
};
