/*
 * Simple banchmark project for AUTOSAR "like" GPT Driver with OSEK/VDX Kernel.
 *
 * Author: 2013  Giuseppe Serano
 */

CPU test_application {

	OS EE {

		CPU_DATA = CORTEX_MX {
			MODEL = M4;
			APP_SRC = "main.c";
			APP_SRC = "Dio_Cfg.c";
			APP_SRC = "Mcu_Cfg.c";
			APP_SRC = "Port_Cfg.c";
			APP_SRC = "Gpt_Cfg.c";
			COMPILER_TYPE = KEIL;
			/* COMPILER_TYPE = CCS; */
			MULTI_STACK = FALSE;
		};
		

		MCU_DATA = STELLARIS {
			MODEL = LM4F232xxxx;
		};

		EE_OPT = "__AUTOSAR_R4_0__";

		EE_OPT = "__AS_DIO_DRIVER__";
		EE_OPT = "__AS_MCU_DRIVER__";
		EE_OPT = "__AS_PORT_DRIVER__";
		EE_OPT = "__AS_GPT_DRIVER__";

		/* Used to build separate libas.a without configuration */
		EE_OPT = "__ADD_LIBS__";
		LIB = ENABLE {
			NAME = "AUTOSAR";
		};

		STATUS = STANDARD;
		STARTUPHOOK = FALSE;
		ERRORHOOK = FALSE;
		SHUTDOWNHOOK = FALSE;
		PRETASKHOOK = FALSE;
		POSTTASKHOOK = FALSE;
		USEGETSERVICEID = FALSE;
		USEPARAMETERACCESS = FALSE;
		USERESSCHEDULER = FALSE;

		KERNEL_TYPE = BCC1;

	};

	/* this is the OIL part for the Task 0 A */
	TASK Task_0_A {
		PRIORITY = 0x02;   /* High priority */
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		ACTIVATION = 1;    /* only one pending activation */
		STACK = SHARED;
	};

	/* this is the OIL part for the GPT CHANNEL 0 A ISR */
	ISR Gpt_Channel_0_A_ISR {
		CATEGORY = 2;
		ENTRY = "TIMER_0_A";
		PRIORITY = 1;
	};

	/* this is the OIL part for the Task 0 B */
	TASK Task_0_B {
		PRIORITY = 0x02;   /* Hig priority */
		SCHEDULE = FULL;
		AUTOSTART = FALSE;
		ACTIVATION = 1;    /* only one pending activation */
		STACK = SHARED;
	};

	/* this is the OIL part for the GPT CHANNEL 0 B ISR */
	ISR Gpt_Channel_0_B_ISR {
		CATEGORY = 2;
		ENTRY = "TIMER_0_B";
		PRIORITY = 1;
	};

	/* this is the OIL part for the Task Backgroung */
	TASK TaskBackground {
		PRIORITY = 0x01;   /* Low priority */
		SCHEDULE = FULL;
		AUTOSTART = TRUE;
		ACTIVATION = 1;    /* only one pending activation */
		STACK = SHARED;
	};

};
